@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Welcome to Dr. Sillystringz's Factory</h1>

@if (@Model.Engineers.Count == 0)
{
  <h2>Please add an engineer.</h2>
}
else
{
  <h2>List of current engineers:</h2>
  <ul>
  @foreach(var engineer in Model.Engineers)
  {
    <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", "Engineers", new { id = engineer.EngineerId}, null)</li>
  }
  </ul>
}
<br>

@if (@Model.Machines.Count == 0)
{
  <h2>Please add a machine.</h2>
}
else
{
  <h2>List of machines:</h2>
  <ul>
  @foreach(var machine in Model.Machines)
  {
    <li>@Html.ActionLink($"{machine.MachineDescription}", "Details", "Machines", new { id = machine.MachineId}, null)</li>
  }
  </ul>
}
<br>
<br>

<p>@Html.ActionLink("View all Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("View all Machines", "Index", "Machines")</p>