@{
  Layout = "_Layout";
}
@* Find a way to add cross links to show all engineers
Make default values for dropdowns *@


@using Factory.Models;
<h1></h1>

@if (@Model.Count == 0)
{
  <h3>No Machines logged yet.</h3>
}
else
{
  <h3>Current Machinery</h3>
<ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.MachineDescription}", "Details", new { id = machine.MachineId })</li>
  }
</ul>
}

<p>@Html.ActionLink("Add new Machine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
